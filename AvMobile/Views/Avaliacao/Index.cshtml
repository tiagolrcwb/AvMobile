@model IEnumerable<AvMobile.Models.Avaliacao>

@{
    Layout = "../Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Avaliações</title>
</head>
<body>
    <p>
        @Html.ActionLink("Cadastrar Nova Avaliação", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
               <small>Filial da Avaliação</small>
            </th>
            <th>
                <small>Codigo IMEI</small>
                
            </th>
            <th>
                <small>Usuario da Avaliação</small>
               
            </th>
            <th>
                <small>Aceite do Cliente</small>
                
            </th>
            
            <th>
                <small>Valor da Avaliação</small>
                
            </th>
            <th>
                <small>Observação</small>
                
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.filial.nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.imei.num_imei)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.usuario.login)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.aceite)
            </td>
           
            <td>
                R$@Html.DisplayFor(modelItem => item.valorAv)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.obs)
            </td>
            <td>
                @Html.ActionLink("Aceite do Cliente", "Edit", new { id = item.id }) |
                @Html.ActionLink("Efetuar a Compra", "Details", new { id = item.id }) |
                @Html.ActionLink("Inativar a Avaliação", "Delete", new { id = item.id })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
